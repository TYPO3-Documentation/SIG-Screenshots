{
  "name": "typo3/screenshots",
  "authors": [
    {
      "name": "TYPO3 CMS Documentation Team",
      "role": "Developer",
      "homepage": "https://typo3.org/community/teams/documentation"
    },
    {
      "name": "The TYPO3 Community",
      "role": "Contributor",
      "homepage": "https://typo3.org/community/"
    }
  ],
  "type": "typo3-cms-extension",
  "description": "Provide tools and runner to take scripted screenshots of the TYPO3 CMS.",
  "homepage": "https://github.com/TYPO3-Documentation/t3docs-screenshots",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "typo3",
    "screenshot"
  ],
  "support": {
    "issues": "https://github.com/TYPO3-Documentation/t3docs-screenshots/issues"
  },
  "autoload": {
    "psr-4": {
      "TYPO3\\CMS\\Screenshots\\": "Classes/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "require": {
    "codeception/codeception": "^4.1",
    "codeception/module-webdriver": "^1.1",
    "sensiolabs/ansi-to-html": "^1.2",
    "typo3/testing-framework": "^6.3.3"
  },
  "require-dev": {
    "typo3/cms-core": "10.*.*@dev",
    "typo3/cms-frontend": "10.*.*@dev",
    "typo3/cms-install": "10.*.*@dev",
    "typo3/cms-about": "10.*.*@dev",
    "typo3/coding-standards": "^0.2.0",
    "phpstan/phpstan": "^0.12.37",
    "typo3/tailor": "^1.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-autoload-dump": [
      "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
    ]
  },
  "extra": {
    "typo3/cms": {
      "app-dir": ".Build",
      "web-dir": ".Build/Web",
      "extension-key": "screenshots"
    }
  }
}
